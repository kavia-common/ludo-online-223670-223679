# Frontend environment variables (Create React App)
# Copy to .env and adjust for your environment. Do NOT commit real secrets.

# Base URL for REST API (choose one of the two or both)
REACT_APP_API_BASE=http://localhost:3001
# Alternative/back-compat key; if both are set, REACT_APP_API_BASE takes precedence
REACT_APP_BACKEND_URL=http://localhost:3001

# Optional WebSocket URL. If omitted, derived from API base.
# Use ws:// for http and wss:// for https.
REACT_APP_WS_URL=ws://localhost:3001/ws

# Public site URL used for auth redirects or deep links
REACT_APP_SITE_URL=http://localhost:3000
