# PUBLIC_INTERFACE
# Example environment configuration for the Ludo frontend (Create React App style).
# Copy to .env and adjust values per environment.

# REST API base URL (preferred)
REACT_APP_API_BASE=http://localhost:3001
# or alternatively
# REACT_APP_BACKEND_URL=http://localhost:3001

# WebSocket URL (optional). If unset, it will be derived from API base and append /ws
REACT_APP_WS_URL=ws://localhost:3001/ws

# Public site origin (used for redirects if needed)
REACT_APP_SITE_URL=http://localhost:3000
